# Cloudflare Worker Configuration
# Copy this content to your wrangler.toml file

name = "your-worker-name"
main = "worker.js"
compatibility_date = "2024-01-01"

# âš¡ AUTO-CLEANUP CRON TRIGGER
# This runs every 15 minutes to delete expired checkouts
[triggers]
crons = ["*/15 * * * *"]  # Every 15 minutes

# ğŸ—„ï¸ D1 Database Binding
[[d1_databases]]
binding = "DB"
database_name = "your-database-name"
database_id = "your-database-id"

# ğŸ“¦ R2 Bucket Binding (for file storage)
[[r2_buckets]]
binding = "R2_BUCKET"
bucket_name = "your-bucket-name"

# ğŸ”‘ Environment Variables
[vars]
VERSION = "1.0.0"

# ğŸ” Secrets (Set these with wrangler secret put)
# wrangler secret put WHOP_API_KEY
# wrangler secret put CF_API_TOKEN (optional, for cache purge)
# wrangler secret put CF_ZONE_ID (optional, for cache purge)

# ğŸ“ Cron Schedule Examples:
# Every 5 minutes:   */5 * * * *
# Every 15 minutes:  */15 * * * *
# Every 30 minutes:  */30 * * * *
# Every hour:        0 * * * *
# Every 6 hours:     0 */6 * * *
# Every day at 2am:  0 2 * * *


# Backup Email (optional, for daily 2AM cron)
# BACKUP_EMAIL_TO = "you@example.com"
# BACKUP_EMAIL_FROM = "backup@prankwish.com"
# BACKUP_EMAIL_NAME = "WishesU Backup"
